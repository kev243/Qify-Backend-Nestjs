generator client {
 provider = "prisma-client-js"
 engineType = "binary"
 moduleFormat    = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id         String   @id @default(cuid())
  email      String   @unique
  name       String?
  urlProfile  String? // url de la photo de profil
  links      Link[]  
  profile    Profile?
  provider   String
  providerId String   
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Link{
  id          String   @id @default(cuid())
  title       String
  slug        String   
  url         String
  status      Boolean  @default(true)
  description String?
  userId      String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}


model Profile {
  id        String   @id @default(cuid())
  username  String   @unique
  bio       String?
  status    Boolean  @default(true)  // true = public, false = priv√©
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("profiles")
}

model test {
  id    Int     @id @default(autoincrement())
  name  String
  value Float
}
